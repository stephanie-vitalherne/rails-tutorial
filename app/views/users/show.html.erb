<h1><%= @user.first_name %> <%= @user.last_name %></h1>

<%= @user.photo.attachment.nil? ? "User has no photo" : image_tag(@user.photo, size: '200x150') %>
<p> You can reach <%= @user.first_name %> at <%= @user.email %>!</p>

<p><%= @user.bio %></p>

<% unless @user.articles.empty? %>
  <h4> Articles written by <%= @user.full_name %> </h4>

  <% @user.articles.each do |a| %>
    <%= link_to "#{a.title}", a %> <br>
  <% end %>
  <% else %>
  <h4><%= @user.first_name %> hasn't written any articles yet.</h4>
<% end %>
