<h1>Write a New Post</h1>
<%= form_for(@article) do |f| %>
<%= f.text_field :title, placeholder: 'Enter a Title' %>
<br>
<%= f.text_field :author, placeholder: 'Who are you?' %>
<br>
<%= f.text_area :content, placeholder: 'What is this lie about?' %>
<br>
<%= f.file_field :cover_photo %> <br>
<%= f.submit 'Publish Article' %>

<% end %>
